@{
    ViewData["Title"] = "List";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages;
}

<div>
    @if (totalPages > 1)
    {
        <nav>
            <ul class="pagination">
                @if (currentPage > 3)
                {
                    <li class="page-item"><a class="page-link" href="@Url.Action("List", new { page = 1 })">First</a></li>
                    @if (currentPage > 4)
                    {
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    }
                }
                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(currentPage + 2, totalPages); i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")"><a class="page-link" href="@Url.Action("List", new { page = i })">@i</a></li>
                }
                @if (currentPage < totalPages - 2)
                {
                    @if (currentPage < totalPages - 3)
                    {
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    }
                    <li class="page-item"><a class="page-link" href="@Url.Action("List", new { page = totalPages })">Last</a></li>
                }
            </ul>
        </nav>
    }
</div>